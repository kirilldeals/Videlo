@using Videlo.Models.ViewModels;

@model ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
    var fds = Model;
}

<h2>Change password for user @Model.Email</h2>
<div class="col-6">
    <form asp-action="ChangePassword">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="mb-3">
            <label asp-for="OldPassword" class="control-label"></label>
            <input asp-for="OldPassword" class="form-control" value="@Model.OldPassword" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewPassword" class="control-label"></label>
            <input asp-for="NewPassword" class="form-control" value="@Model.NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NewPasswordConfirm" class="control-label"></label>
            <input asp-for="NewPasswordConfirm" class="form-control" value="@Model.NewPasswordConfirm" />
            <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>